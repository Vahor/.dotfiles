[core]
    excludesfile = ~/.gitignore
    editor = nvim
    autocrlf = input
[push]
    default = simple
[commit]
	gpgsign = true
[pull]
	rebase = true
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    ui = auto
[fetch]
	prune = true
[hub]
    protocol = https
[github]
    user = vahor
[diff]
    tool = nvimdiff
[init]
    defaultBranch = main
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
    gpgsign = true
[alias]
    gui = !sh -c 'lazygit'
    open = !sh -c 'gitopen'
[user]
	name = Vahor
	email = me@vahor.fr
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAINfXaLc96u/JMOECHXklURFyzQiBbphvVAuqbiPaoAeQ
[rerere]
    enabled = true
