#!/usr/bin/env zsh

VIM="nvim"


export GIT_EDITOR="$VIM"
export EDITOR="$VIM"
export MANPAGER="$VIM +Man!"

export OPENCV_BUILD_ROOT=~/opencv

#source $HOME/.cargo/env


addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

